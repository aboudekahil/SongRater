<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Edit Profile</title>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="icon" type="image/x-icon" href="/icons/favicon.ico" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
    <link href="/styles/LoginRegister.css" rel="stylesheet" />
    <link href="/styles/styles.css" rel="stylesheet" />
  </head>

  <body>
    <div
      class="container-lg w-100 h-100 d-flex align-items-center justify-content-center"
    >
      <div class="card">
        <div class="tab-content card-body">
          <h2>Edit Profile</h2>
          <form method="post" action="/api/editProfile">
            <div class="form-group in-1">
              <label for="userName">Name</label>
              <input
                type="text"
                id="userName"
                placeholder="Your Name"
                name="name"
                class="form-control"
                value="<%= user.FullName %>"
                required
              />
            </div>
            <div class="form-group in-2">
              <label for="userEmail">Email</label>
              <input
                type="email"
                placeholder="Your Email"
                id="userEmail"
                name="email"
                class="form-control"
                value="<%=user.Email%>"
                required
              />
            </div>
            <div class="form-group in-3">
              <label for="userPassword">Password</label>
              <input
                type="password"
                id="userPassword"
                name="password"
                placeholder="Your Password"
                class="form-control"
                value="<%=user.Password%>"
                required
              />
            </div>
            <div class="form-group in-4">
              <label for="userCountry">Country</label>
              <select
                class="form-control"
                name="country"
                id="userCountry"
                required
              >
                <% for(let country of countries){ %>
                <option value="<%= country.country_id %>" <%=(user.user_country===country.country_id)?"selected":""%>>
                  <%=country.country_name%> (<%= country.country_abbr%>)
                </option>
                <%}%>
              </select>
            </div>
            <div class="form-group in-5">
              <label for="userDob">Date of birth</label>
              <input
                type="date"
                id="userDob"
                name="dob"
                class="form-control"
                value="<%= user.user_dob%>"
                required
              />
            </div>
            <%if(isArtist){%>
            <div class="form-group in-8">
              <label for="artistStageName">Stage name</label>
              <input
                type="text"
                id="artistStageName"
                name="stageName"
                class="form-control"
                placeholder="Your Stage Name"
                value="<%=user.artist_stagename%>"
                required
              />
            </div>
            <%}%>
            <input class="btn btn-primary in-7" type="submit" value="Update" />
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
